<%= form_with(model: post, id: "post_form", class: "contents", data: { turbo_frame: "_top" }) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :category %>
    <%= form.select :category, Post::CATEGORIES, { include_blank: true }, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <% if post.persisted? %>
      <%= link_to "Cancel", post, data: { turbo_frame: "_top" }, class: "rounded-lg py-3 px-5 text-gray inline-block font-medium cursor-pointer" %>
    <% else %>
      <%= link_to "Cancel", posts_path, data: { turbo_frame: "_top" }, class: "rounded-lg py-3 px-5 text-gray inline-block font-medium cursor-pointer" %>
    <% end %>
  </div>
<% end %>
